@model IEnumerable<FirstProj.Models.Employee>


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Employee Register</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info form-control text-white">Register New Employee</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Any())
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m=>m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m=>m.Position)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m=>m.Location)
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Position)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Location)
                            </td>
                            <td>
                                <button asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No data available.</p>
            }
        </form>
    </div>
</div>